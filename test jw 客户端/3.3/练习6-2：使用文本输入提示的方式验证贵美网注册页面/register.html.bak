 <script type="text/javascript">
function $ (ElementID) {
		return document.getElementById(ElementID);
}
function checkFname(){
/*名字的验证*/	
    var user=$("fname");	
    var divFname=$("divFname");
    divFname.innerHTML="";
        if(user.value==""){
		divFname.innerHTML="名字不能为空";
		return false;
		}
	for(var i=0;i<user.value.length;i++){
		var j=user.value.substring(i,i+1)
		if(j>=0){
			divFname.innerHTML="名字中不能包含数字";
			return false;
			}
	}
	return true;
}
function checkLname(){
	var lname=$("lname");
	var divLname=$("divLname");
	divLname.innerHTML="";
    if(lname.value==""){
		divLname.innerHTML="姓氏不能为空";
		return false;
	}
	for(var i=0;i<lname.value.length;i++){
		var j=lname.value.substring(i,i+1)
		if(j>=0){
			divLname.innerHTML="姓氏中不能包含数字";
			return false;
			}
	}
	return true;
}
/*验证密码*/	
function checkPass(){
	var pwd=$("pass");
	var divPass=$("divPass");
	divPass.innerHTML="";
	if(pwd.value==""){
		divPass.innerHTML="密码不能为空";
		return false;
		}
    if(pwd.value.length<6){
		divPass.innerHTML="密码必须等于或大于6个字符";
		return false;
	return true;
	}
}
function checkRpass(){
	var pwd=$("pass");
    var repwd=$("rpass");
	var divRpass=$("divRpass");
    divRpass.innerHTML="";
	if(pwd.value!=repwd.value){
		 divRpass.innerHTML="两次输入的密码不一致";
		return false;
		}
	return true;
}
/*验证邮箱*/
function checkEmail(){
  var mail=$("email");
  var divEmail=$("divEmail");
  divEmail.innerHTML="";  
	if(mail.value==""){//检测Email是否为空
		divEmail.innerHTML="Email不能为空";
		return false;
		}
	if(mail.value.indexOf("@")==-1){
		divEmail.innerHTML="Email格式不正确，必须包含@";
		return false;
		}
	if(mail.value.indexOf(".")==-1){
		divEmail.innerHTML="Email格式不正确，n必须包含.";
		return false;
		}
	 return true;
	}

function check(){
	if(checkFname()&&checkLname()&&checkPass()&&checkRpass()&& checkEmail()) {
	    return true
	}
	else{
	    alert();
		return false
	}
}

</script>
